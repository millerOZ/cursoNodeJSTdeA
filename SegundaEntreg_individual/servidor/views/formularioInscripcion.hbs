{{>header}}
<div class="text-center">
  <h2>Formulario para inscribirse en un nuevo curso</h2>
  <p> Utilice este formulario para inscribirse en un curso</p>
</div>
    <form action="/inscripcionUsuario" method="post">
      <div class="form-row">
        <div class="form-group col-md-6">
           <div class="col">
            <label for="exampleFormControlInput1">Documento de identidad</label>
            <input type="number" class="form-control" name ="id" placeholder="Id del curso" required>
          </div>
        </div>
        <div class="form-group col-md-6">
          <div class="col">
            <label for="exampleFormControlInput1">Correo Electronico</label>
            <input type="email" class="form-control" placeholder="correo" name="correo" required >
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <div class="col">
            <label for="exampleFormControlInput1">Nombre</label>
            <input type="text" class="form-control" placeholder="Nombre" name="nombre" >
          </div>
        </div>
        <div class="form-group col-md-6">
          <div class="col">
            <label for="exampleFormControlInput1">Teléfono</label>
            <input type="number" class="form-control" placeholder="telefono" name="teléfono" >
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-lg-12">
          <div class="col">
            <label for="exampleFormControlSelect1">Cursos disponibles</label>
               <select class="form-control" id="exampleFormControlSelect1" name="cursoDisponible" >
                 <option>-</option>
                 <option value="nodejs">nodejs</option>
                 <option value="python">python</option>
                 <option value="javascript">javascript</option>
                 <option value="java">java</option>
               </select>
          </div>
        </div>
      </div>
      <div class="col-lg-12 ">
        <button class="btn btn-success ">Enviar</button>
      </div>
    </form>
    <!-- {{{listar}}} -->
{{>footer}}
